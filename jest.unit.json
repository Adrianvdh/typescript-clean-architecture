{
  "moduleFileExtensions": [
    "ts",
    "js"
  ],
  "rootDir": ".",
  "verbose": true,
  "testEnvironment": "node",
  "testRegex": "(/test/unit/.*|(\\.|/)(spec))\\.ts?$",
  "coverageReporters": [
    "json-summary",
    "text",
    "lcov"
  ],
  "coverageDirectory": ".unit-test",
  "collectCoverageFrom": [
    "src/**/*.ts"
  ],
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "setupFiles": [
    "./test/.common/ExposeEnv.ts"
  ],
  "reporters": [
    "default",
    "jest-junit"
  ],
  "testResultsProcessor": "jest-sonar-reporter"
}
