{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDirs": [
      "./src",
      "./test"
    ],
    "target": "ES2020",
    "module": "commonjs",
    "lib": [
      "ES2020"
    ],
    "types": [
      "reflect-metadata",
      "jest",
      "node"
    ],
    "strict": true,
    "strictPropertyInitialization": false,
    "allowJs": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "removeComments": true,
    "sourceMap": true
  },
  "include": [
    "./src/**/*.ts",
    "./test/**/*.ts"
  ]
}
